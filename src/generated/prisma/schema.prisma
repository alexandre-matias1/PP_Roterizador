generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Routes {
  id       Int    @id
  VEICULO  String
  FILDOC   String
  DOC      String
  SERIE    String
  LAT      Float
  LNG      Float
  ENDERECO String

  @@map("routes")
}

model Users {
  id        Int    @id
  name      String
  filial    String
  latFilial Float
  lngFilial Float

  @@map("users")
}

model RoutesChange {
  id        Int      @id
  wasRoute  String
  toRoute   String
  route_id  String
  user_id   Int
  createdAt DateTime @default(now()) @map("created_at")
}
